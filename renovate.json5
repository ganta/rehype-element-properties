{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: ["config:base"],
  labels: ["dependencies"],
  lockFileMaintenance: {
    enabled: true,
    extends: ["schedule:monthly"],
  },
  packageRules: [
    {
      groupName: "npm-non-major",
      matchManagers: ["npm"],
      matchUpdateTypes: ["minor", "patch"],
    },
  ],
}
